<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">


    <TextView
        android:id="@+id/textViewsettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Settings"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.048"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/im_profileSettings"
        android:layout_width="114dp"
        android:layout_height="109dp"
        android:layout_marginTop="14dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewsettings"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/img_1" />

    <ImageButton
        android:id="@+id/bt_changeImageSettings"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="38dp"
        android:layout_height="33dp"
        android:layout_marginTop="76dp"
        android:src="@drawable/ic_baseline_change_circle_24"
        app:layout_constraintBottom_toBottomOf="@+id/im_profileSettings"
        app:layout_constraintEnd_toEndOf="@+id/im_profileSettings"
        app:layout_constraintTop_toTopOf="@+id/im_profileSettings"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_currentName"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:hint="Current_Name"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toEndOf="@+id/im_profileSettings"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_currentEmailSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Current_Email_address"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.649"
        app:layout_constraintStart_toEndOf="@+id/im_profileSettings"
        app:layout_constraintTop_toBottomOf="@+id/tv_currentName"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.52">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_sky_500"
            android:paddingStart="12dp"
            android:text="Account Settings"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="196dp" />


        <Button
            android:id="@+id/bt_changeParameterSet"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_arrow_access"
            android:drawablePadding="12dp"
            android:ems="10"
            android:paddingStart="12dp"
            android:text="Change Parameters"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="238dp" />

        <Button
            android:id="@+id/bt_changePasswordSettings"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_arrow_access"
            android:drawablePadding="12dp"
            android:ems="10"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="Change Password"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="286dp" />

        <Button
            android:id="@+id/bt_aboutAppSettings"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="410dp"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_arrow_access"
            android:drawablePadding="12dp"
            android:ems="10"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="About NiftyDriver"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp"

            android:textStyle="bold"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="382dp" />

        <Switch
            android:id="@+id/sw_themeDarkMode"
            android:layout_width="410dp"
            android:layout_height="48dp"
            android:paddingStart="12dp"
            android:text="Dark Mode"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="430dp" />

        <Button
            android:id="@+id/bt_logoutSettings"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="112dp"
            android:layout_height="45dp"
            android:ems="10"
            android:paddingStart="12dp"
            android:text="Log out"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp"

            android:textStyle="bold"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="478dp" />

        <Button
            android:id="@+id/bt_deleteUserSettings"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="200dp"
            android:layout_height="53dp"
            android:ems="10"
            android:paddingStart="12dp"
            android:text="Delete Account"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="#F90505"
            android:textColorHint="@android:color/darker_gray"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="10dp"
            tools:layout_editor_absoluteY="672dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>