<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_baseline_gps_off_24" />

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="GPS"
            android:textAlignment="center"
            android:textColor="@color/blue_sky_200"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="000"
        android:textAlignment="center"
        android:textColor="@color/blue_sky_200"
        android:textSize="70sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvUnitc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:text="km/h"
        android:textColor="@color/blue_sky_200" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tv_safeAccel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAC"
                android:textColor="@color/blue_sky_200"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_safeDesa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SDC"
                android:textColor="@color/blue_sky_200"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_safeLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SLC"
                android:textColor="@color/blue_sky_200"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_safeRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SRC"
                android:textColor="@color/blue_sky_200"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_hardAccel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HAC"
                android:textColor="@color/StateButton"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_hardDes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HDC"
                android:textColor="@color/StateButton"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_sharpLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHLC"
                android:textColor="@color/StateButton"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tv_sharpRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SHRC"
                android:textColor="@color/StateButton"
                android:textSize="13dp" />


        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_finalScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FS"
                android:textAlignment="center"
                android:textColor="@color/blue_sky_200"
                android:textSize="60dp" />

            <Button
                android:id="@+id/bt_startTrip"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="112dp"
                android:layout_height="127dp"
                android:backgroundTint="@color/blue_sky_500"
                android:text="Start Trip"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:strokeColor="#FF9800"
                app:strokeWidth="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance:"
                    android:textAlignment="center"
                    android:textColor="@color/blue_sky_200"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_totalHours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Traveled:"
                    android:textColor="@color/blue_sky_200"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvMaxSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Speed:"
                    android:textColor="@color/blue_sky_200"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_aveSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg Speed:"
                    android:textColor="@color/blue_sky_200"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_total_Current"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TTimeApp"
                    android:textColor="@color/blue_sky_200"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"

                    android:paddingLeft="5dp">


                    <com.jjoe64.graphview.GraphView
                        android:id="@+id/graph2"
                        android:layout_width="73dp"
                        android:layout_height="66dp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


