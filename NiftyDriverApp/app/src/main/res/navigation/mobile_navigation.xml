<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_profile">

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.finalproyect.niftydriverapp.ui.profile.ProfileFragment"
        android:label="@string/title_Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_startTrip"
        android:name="com.finalproyect.niftydriverapp.ui.starttrip.StartTripFragment"
        android:label="@string/title_StartTrip"
        tools:layout="@layout/fragment_starttrip" />

    <fragment
        android:id="@+id/navigation_tripView"
        android:name="com.finalproyect.niftydriverapp.ui.tripView.TripViewFragment"
        android:label="@string/title_TripView"
        tools:layout="@layout/fragment_tripview" />

    <fragment
        android:id="@+id/navigation_myTrips"
        android:name="com.finalproyect.niftydriverapp.ui.mytrips.MyTripsFragment"
        android:label="@string/title_MyTrips"
        tools:layout="@layout/fragment_my_trips" />
</navigation>