<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvLat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Latitude"

                android:textColor="#00ee00"
                 />

            <TextView
                android:id="@+id/separator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAX"
                android:textColor="#00ee00" />

            <TextView
                android:id="@+id/tvMaxSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NIL"
                android:textColor="#00ee00" />

            <TextView
                android:id="@+id/tvLon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Longitude"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#00ee00"
                 />

            <TextView
                android:id="@+id/tvAccuracy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="ACCURACY"
                android:textColor="#00ee00"
                 />

            <TextView
                android:id="@+id/tvHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="HEADING"
                android:textColor="#00ee00"
                 />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_Xaxis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="x axis data" />

            <TextView
                android:id="@+id/tv_Yaxis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="y axis data" />

            <TextView
                android:id="@+id/tv_XaxisCali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tv_XaxisCali" />

            <TextView
                android:id="@+id/tv_YaxisCali"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="tv_YaxisCali" />

            <TextView
                android:id="@+id/tv_pith"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="pitch" />

            <TextView
                android:id="@+id/tv_yaw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="yaw" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="#00ee00"
                android:textSize="80sp" />

            <TextView
                android:id="@+id/tvUnitc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="km/h"
                android:textColor="#00ee00" />
        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="27dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">


        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="wrap_content"
            android:layout_height="333dp"
            android:layout_marginBottom="68dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_startTrip"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="121dp"
                android:layout_height="121dp"
                android:backgroundTint="@color/blue_sky_500"
                android:text="Start Trip"
                android:textColor="@color/white"
                android:textSize="25dp"
                app:strokeColor="#FF9800"
                app:strokeWidth="10dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Distance" />

            <TextView
                android:id="@+id/tv_total_Current"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Time app runing" />

            <TextView
                android:id="@+id/tv_totalHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Time Traveled" />

            <TextView
                android:id="@+id/tv_aveSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Average Speed" />
        </LinearLayout>

    </LinearLayout>


